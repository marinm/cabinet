{
    "manifest_version": 2,
    "name": "cabinet",
    "version": "0.0.0",

    "description": "Yet another bookmarks manager",
    "homepage_url": "https://github.com/marinm/cabinet",

    "permissions": [
        "bookmarks",
        "history",
        "tabs"
    ],

    "icons": {
        "48": "icons/48.png"
    },

    "browser_action": {
        "default_icon": {
            "48": "icons/48.png"
        },
        "default_title": "cabinet"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}